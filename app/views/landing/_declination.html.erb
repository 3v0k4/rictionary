<% if declination.fetch(:mesko, nil).nil? %>
  <form class="declination-split">
    <input type="radio" class="toggle" id="toggle-singular" name="declination" value="singular" checked>
    <label id="label-singular" class="label" for="toggle-singular">Singular</label>
    <input type="radio" class="toggle" id="toggle-plural" name="declination" value="plural">
    <label id="label-plural" class="label" for="toggle-plural">Plural</label>

    <table class="declination-split-table" id="declination-singular">
      <tr>
        <th>nominative</th>
        <td><%= declination.fetch(:singular).fetch(:nominative) %></td>
      </tr>

      <tr>
        <th>genitive</th>
        <td><%= declination.fetch(:singular).fetch(:genitive) %></td>
      </tr>

      <tr>
        <th>dative</th>
        <td><%= declination.fetch(:singular).fetch(:dative) %></td>
      </tr>

      <tr>
        <th>accusative</th>
        <td><%= declination.fetch(:singular).fetch(:accusative) %></td>
      </tr>

      <tr>
        <th>instrumental</th>
        <td><%= declination.fetch(:singular).fetch(:instrumental) %></td>
      </tr>

      <tr>
        <th>locative</th>
        <td><%= declination.fetch(:singular).fetch(:locative) %></td>
      </tr>

      <tr>
        <th>vocative</th>
        <td><%= declination.fetch(:singular).fetch(:vocative) %></td>
      </tr>
    </table>

    <table class="declination-split-table" id="declination-plural">
      <tr>
        <th>nominative</th>
        <td><%= declination.fetch(:plural).fetch(:nominative) %></td>
      </tr>

