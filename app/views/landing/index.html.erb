<%= form_with url: root_path, method: :get do |form| %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<% if @translations.any? %>
  Translations:
  <ul>
    <% @translations.each do |translation| %>
      <li><%= translation %></li>
    <% end %>
  </ul>
<% end %>

<% if @examples.any? %>
  Examples:
  <ul>
    <% @examples.each do |example| %>
      <li><%= example %></li>
    <% end %>
  </ul>
<% end %>

<% if @images.any? %>
  Images:
  <ul>
    <% @images.each do |image| %>
      <li><img src="<%= image %>"></img></li>
    <% end %>
  </ul>
<% end %>

<% if @declination.present? %>
  Declination:
  <table>
    <tr>
      <th>nominative</th>
      <td><%= @declination.fetch(:nominative_singular) %></td>
      <td><%= @declination.fetch(:nominative_plural) %></td>
    </tr>

    <tr>
      <th>genitive</th>
      <td><%= @declination.fetch(:genitive_singular) %></td>
      <td><%= @declination.fetch(:genitive_plural) %></td>
    </tr>

    <tr>
      <th>dative</th>
      <td><%= @declination.fetch(:dative_singular) %></td>
      <td><%= @declination.fetch(:dative_plural) %></td>
    </tr>

    <tr>
      <th>accusative</th>
      <td><%= @declination.fetch(:accusative_singular) %></td>
      <td><%= @declination.fetch(:accusative_plural) %></td>
    </tr>

    <tr>
      <th>instrumental</th>
      <td><%= @declination.fetch(:instrumental_singular) %></td>
      <td><%= @declination.fetch(:instrumental_plural) %></td>
    </tr>

    <tr>
      <th>locative</th>
      <td><%= @declination.fetch(:locative_singular) %></td>
      <td><%= @declination.fetch(:locative_plural) %></td>
    </tr>

    <tr>
      <th>vocative</th>
      <td><%= @declination.fetch(:vocative_singular) %></td>
      <td><%= @declination.fetch(:vocative_plural) %></td>
    </tr>
  </table>
<% end %>

<% if @conjugation.present? %>
  Conjugation:
  <table>
    <tr>
      <td colspan="2"></td>
      <td colspan="3">singular</td>
      <td colspan="3">plural</td>
    </tr>

    <tr>
      <td colspan="2"></td>
      <td>1st</td>
      <td>2nd</td>
      <td>3nd</td>
      <td>1st</td>
      <td>2nd</td>
      <td>3nd</td>
    </tr>

    <tr>
      <th colspan="2">infinitive</th>
      <td colspan="6"><%= @conjugation.fetch(:infinitive) %></td>
    </tr>

    <tr>
      <th colspan="2">present</th>
      <td><%= @conjugation.fetch(:present)[0] %></td>
      <td><%= @conjugation.fetch(:present)[1] %></td>
      <td><%= @conjugation.fetch(:present)[2] %></td>
      <td><%= @conjugation.fetch(:present)[3] %></td>
      <td><%= @conjugation.fetch(:present)[4] %></td>
      <td><%= @conjugation.fetch(:present)[5] %></td>
    </tr>

    <tr>
      <th rowspan="3">past</th>
      <th>masculine</th>
      <td><%= @conjugation.fetch(:past).fetch(:masculine)[0] %></td>
      <td><%= @conjugation.fetch(:past).fetch(:masculine)[1] %></td>
      <td><%= @conjugation.fetch(:past).fetch(:masculine)[2] %></td>
      <td><%= @conjugation.fetch(:past).fetch(:masculine)[3] %></td>
      <td><%= @conjugation.fetch(:past).fetch(:masculine)[4] %></td>
      <td><%= @conjugation.fetch(:past).fetch(:masculine)[5] %></td>
    </tr>
  </table>
<% end %>
