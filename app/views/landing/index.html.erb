<%= form_with url: root_path, method: :get do |form| %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<% if @translations.any? %>
  Translations:
  <ul>
    <% @translations.each do |translation| %>
      <li><%= translation %></li>
    <% end %>
  </ul>
<% end %>

<% if @examples.any? %>
  Examples:
  <ul>
    <% @examples.each do |example| %>
      <li><%= example %></li>
    <% end %>
  </ul>
<% end %>
