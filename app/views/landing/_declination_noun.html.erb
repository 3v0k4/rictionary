<form class="inflection-split">
  <input type="radio" class="toggle" id="toggle-singular" name="declination" value="singular" checked>
  <label id="label-singular" class="label" for="toggle-singular">Singular</label>
  <input type="radio" class="toggle" id="toggle-plural" name="declination" value="plural">
  <label id="label-plural" class="label" for="toggle-plural">Plural</label>

  <table class="inflection-split-table" id="declination-singular" class="inflection__table">
    <%= render "inflection_row", header: "nominative", data: declination.dig(:singular, :nominative) %>
    <%= render "inflection_row", header: "genitive", data: declination.dig(:singular, :genitive) %>
    <%= render "inflection_row", header: "dative", data: declination.dig(:singular, :dative) %>
    <%= render "inflection_row", header: "accusative", data: declination.dig(:singular, :accusative) %>
    <%= render "inflection_row", header: "instrumental", data: declination.dig(:singular, :instrumental) %>
    <%= render "inflection_row", header: "locative", data: declination.dig(:singular, :locative) %>
    <%= render "inflection_row", header: "vocative", data: declination.dig(:singular, :vocative) %>
  </table>

  <table class="inflection-split-table" id="declination-plural" class="inflection__table">
    <%= render "inflection_row", header: "nominative", data: declination.dig(:plural, :nominative) %>
    <%= render "inflection_row", header: "genitive", data: declination.dig(:plural, :genitive) %>
    <%= render "inflection_row", header: "dative", data: declination.dig(:plural, :dative) %>
    <%= render "inflection_row", header: "accusative", data: declination.dig(:plural, :accusative) %>
    <%= render "inflection_row", header: "instrumental", data: declination.dig(:plural, :instrumental) %>
    <%= render "inflection_row", header: "locative", data: declination.dig(:plural, :locative) %>
    <%= render "inflection_row", header: "vocative", data: declination.dig(:plural, :vocative) %>
  </table>
</form>

<table class="inflection-unified" class="inflection__table">
  <tr class="inflection__row">
    <th class="inflection__row-header">nominative</th>
    <td class="inflection__row-data"><%= declination.dig(:singular, :nominative) %></td>
    <td class="inflection__row-data"><%= declination.dig(:plural, :nominative) %></td>
  </tr>

  <tr class="inflection__row">
    <th class="inflection__row-header">genitive</th>
    <td class="inflection__row-data"><%= declination.dig(:singular, :genitive) %></td>
    <td class="inflection__row-data"><%= declination.dig(:plural, :genitive) %></td>
  </tr>

  <tr class="inflection__row">
    <th class="inflection__row-header">dative</th>
    <td class="inflection__row-data"><%= declination.dig(:singular, :dative) %></td>
    <td class="inflection__row-data"><%= declination.dig(:plural, :dative) %></td>
  </tr>

  <tr class="inflection__row">
    <th class="inflection__row-header">accusative</th>
    <td class="inflection__row-data"><%= declination.dig(:singular, :accusative) %></td>
    <td class="inflection__row-data"><%= declination.dig(:plural, :accusative) %></td>
  </tr>

  <tr class="inflection__row">
    <th class="inflection__row-header">instrumental</th>
    <td class="inflection__row-data"><%= declination.dig(:singular, :instrumental) %></td>
    <td class="inflection__row-data"><%= declination.dig(:plural, :instrumental) %></td>
  </tr>

  <tr class="inflection__row">
    <th class="inflection__row-header">locative</th>
    <td class="inflection__row-data"><%= declination.dig(:singular, :locative) %></td>
    <td class="inflection__row-data"><%= declination.dig(:plural, :locative) %></td>
  </tr>

  <tr class="inflection__row">
    <th class="inflection__row-header">vocative</th>
    <td class="inflection__row-data"><%= declination.dig(:singular, :vocative) %></td>
    <td class="inflection__row-data"><%= declination.dig(:plural, :vocative) %></td>
  </tr>
</table>
