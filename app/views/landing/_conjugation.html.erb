  </div>

  <div class="inflection-split-table" id="conjugation-past-neuter">
    <table class="inflection__table">
      <%= render "inflection_row", header: "ja", data: "" %>
      <%= render "inflection_row", header: "ty", data: "" %>
      <%= render "inflection_row", header: "ono", data: @view_model.parse_result.conjugation.dig(:past, :neuter, 2) %>
      <%= render "inflection_row", header: "my", data: @view_model.parse_result.conjugation.dig(:past, :neuter, 3) %>
      <%= render "inflection_row", header: "wy", data: @view_model.parse_result.conjugation.dig(:past, :neuter, 4) %>
      <%= render "inflection_row", header: "one", data: @view_model.parse_result.conjugation.dig(:past, :neuter, 5) %>
    </table>
  </div>

  <div class="inflection-split-table" id="conjugation-imperative">
    <table class="inflection__table">
      <%= render "inflection_row", header: "ja", data: @view_model.parse_result.conjugation.dig(:imperative, 0) %>
      <%= render "inflection_row", header: "ty", data: @view_model.parse_result.conjugation.dig(:imperative, 1) %>
      <%= render "inflection_row", header: "on(a/o)", data: @view_model.parse_result.conjugation.dig(:imperative, 2) %>
      <%= render "inflection_row", header: "my", data: @view_model.parse_result.conjugation.dig(:imperative, 3) %>
      <%= render "inflection_row", header: "wy", data: @view_model.parse_result.conjugation.dig(:imperative, 4) %>
      <%= render "inflection_row", header: "oni/one", data: @view_model.parse_result.conjugation.dig(:imperative, 5) %>
    </table>
  </div>
</form>

